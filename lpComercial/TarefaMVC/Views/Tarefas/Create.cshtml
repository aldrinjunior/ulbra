@model AppTarefa.Models.Tarefa
<div class="form-horizontal">

    <form action="Create" method="Post">
        <div class="form-group">
            <label>Id</label>
            <input  class="form-control"
                    type="text" name="id"/> <!-- o nome do id tem que ser igual ao do person -->
        </div>        
        
        <div class="form-group">
            <label>NomeTarefa</label>
            <input  class="form-control"
                    type="text" name="name"/>
        </div>

        <div class="form-group">
            <label>DataLimite</label>
            <input  class="form-control"
                    type="text" name="dataLimite"/>
        </div>
           <div class="form-group">
            <label>PercentConcluido</label>
            <input  class="form-control"
                    type="text" name="percentConcluido"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>
    </form>
    
</div>