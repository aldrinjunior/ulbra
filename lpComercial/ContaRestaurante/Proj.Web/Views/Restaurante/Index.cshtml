@model IEnumerable<Proj.Domain.Entities.Restaurante>

<h2 class="text-center">Restaurantes</h2>
<p class="d-block text-right">
    @Html.ActionLink("Adicionar Restaurante", "Create", new {}, new { @class = "btn btn-outline-info" })
</p>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Endere√ßo</th>
            <th>Numero</th>
            <th>Cidade</th>
            <th>Estado</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.id</th>
                <td>@item.nome</td>
                <td>@item.endereco</td>
                <td>@item.numero</td>
                <td>@item.cidade</td>
                <td>@item.estado</td>
                <td class="text-center">
                    <a class="btn btn-outline-success" 
                        asp-controller="Restaurante" 
                        asp-action="View" 
                        asp-route-id="@item.id"><i class="fas fa-eye"></i></a>

                    <a class="btn btn-outline-primary mx-2" 
                        asp-controller="Restaurante" 
                        asp-action="Update" 
                        asp-route-id="@item.id"><i class="fas fa-edit"></i></a>

                    <a class="btn btn-outline-danger" 
                        asp-controller="Restaurante" 
                        asp-action="Delete" 
                        asp-route-id="@item.id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <td colspan="7" class="text-center"> Nenhum registro cadastrado </td>
        }
    </tbody>
</table>