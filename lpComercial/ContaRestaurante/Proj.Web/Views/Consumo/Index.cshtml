@model IEnumerable<Proj.Domain.Entities.Consumo>

<h2 class="text-center">Consumos do restaurante</h2>
<p class="d-block text-right">
    @Html.ActionLink("Adicionar Conta de Restaurante", "Create", new {}, new { @class = "btn btn-outline-info" })
</p>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id Restaurante</th>
            <th>Nome Restaurante</th>
            <th>Data</th>
            <th>Valor a Pagar</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.id</th>
                <td>R$ @item.restaurante</td>
                <td>@item.data</td>
                <td>@item.valor</td>

                <td class="text-center">
                    <a class="btn btn-outline-success" 
                        asp-controller="Consumo" 
                        asp-action="View" 
                        asp-route-id="@item.id"><i class="fas fa-eye"></i></a>

                    <a class="btn btn-outline-primary mx-2" 
                        asp-controller="Consumo" 
                        asp-action="Update" 
                        asp-route-id="@item.id"><i class="fas fa-edit"></i></a>

                    <a class="btn btn-outline-danger" 
                        asp-controller="Consumo" 
                        asp-action="Delete" 
                        asp-route-id="@item.id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <td colspan="7" class="text-center"> Nenhum registro cadastrado </td>
        }
    </tbody>
</table>

@if (Model.Any())
{
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Menor Consumo</h5>
                <div class="card-body">
                    <div class="form-group col-12">
                        <div class="editor-label">
                            Data
                        </div>
                         <div class="editor-field">
                            <input type="text" value="@ViewBag.menorValor.data" class="form-control" disabled/>
                        </div> 
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Valor a pagar
                        </div>
                        <div class="editor-field">
                            <input type="text" value="R$ @ViewBag.menorValor.valor" class="form-control" disabled/>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Maior Consumo</h5>
                <div class="card-body">
                    <div class="form-group col-12">
                        <div class="editor-label">
                            Data 
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@ViewBag.maiorValor.data" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Valor a pagar
                        </div>
                        <div class="editor-field">
                            <input type="text" value="R$ @ViewBag.maiorValor.valor" class="form-control" disabled/>
                    </div>
                </div>
            </div>
        </div>
     </div>
}