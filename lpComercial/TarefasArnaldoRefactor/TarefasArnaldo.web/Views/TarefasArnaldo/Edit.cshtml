@model TarefasArnaldo.Models.Task

<div class="form-horizontal">
    <form action="Edit" method="Post">

        <div class="form-group">
            
            <label>Id</label>
            <input  class="form-control"
                    type="text" name="id"
                    value="@Model.id"/>
        </div>
    
        <div class="form-group">
            <label>Nome Tarefa</label>
            <input  class="form-control"
                    type="text" name="name"
                    value="@Model.name"/>
        </div>
        
        <div class="form-group">
            <label>Data Limite</label>
            <input  class="form-control"
                    type="text" name="date"
                        value="@Model.date"/>
        </div>

           <div class="form-group">
            <label>Percentual Concluido</label>
            <input  class="form-control"
                    type="text" name="percentComplete"
                        value="@Model.percentComplete"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>
    </form>
</div>